<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Ansible Webserver</title>
    <style>
      body {
        font-family: "Segoe UI", "Helvetica Neue", Arial, sans-serif;
        margin: 40px;
        color: #1a1a1a;
        background: #f7f7fb;
      }
      .card {
        max-width: 560px;
        padding: 24px 28px;
        border-radius: 12px;
        background: #ffffff;
        box-shadow: 0 10px 24px rgba(0, 0, 0, 0.08);
      }
      h1 {
        margin: 0 0 12px;
        font-size: 28px;
      }
      ul {
        margin: 0;
        padding-left: 18px;
      }
    </style>
  </head>
  <body>
    <div class="card">
      <h1>Hello from Ansible Role Webserver</h1>
      <ul>
        <li>host: {{ inventory_hostname }}</li>
        <li>user: {{ app_user }}</li>
        <li>time: {{ ansible_facts["date_time"].iso8601 | default('') }}</li>
      </ul>
    </div>
  </body>
</html>
